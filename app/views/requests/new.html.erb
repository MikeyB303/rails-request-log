<div class="row">
    <h1 class='center-align'>Input new request!</h1>
    <%= render partial: './errors', locals: {errors: @errors} %>
    <%= form_for :requests, url: requests_path do |f| %>
    <div class="row">
        <div class="input-field col s4 push-s2">
            <%= f.text_field :artist, placeholder: 'Artist'%>
        </div>
        <div class="input-field col s4 push-s2">
            <%= f.text_field(:song, placeholder: 'Song')%>
        </div>
    </div>
    <div class="row">
        <div class="input-field col s4 push-s2">
            <%= f.text_field :genre, placeholder: 'Genre'%>
        </div>
        <div class="input-field col s4 push-s2">
            <%= f.text_field :source, placeholder: 'Source'%> 
        </div>
    </div>
    <div class="row">
        <h4 class='center-align'>is the requested song in the library?</h4>
    </div>
    <div class="row">
        <div class="input-field col s4 push-s4">     
            <%= f.select(:in_library?, %w[True False])%>        
        </div>
    </div>
    <input id="checkBox" type="checkbox" class='input-field col s4 push-s4'>
    <label for="checkBox">Does the listener want to provide demographics information?</label>
    <div id="listener-demographics" style="display:none;">
        <h1 class='center-align'>Listener Demographics</h1>
        <div class="row">
            <div class="input-field col s4 push-s2">
                <%= f.text_field :age, placeholder: 'Age'%>
            </div>
            <div class="input-field col s4 push-s2">
                <%= f.select(:gender, %w[Gender Male Female Other])%> 
            </div>
        </div>
        <div class="row">
            <h4 class='center-align'>Is the listener an ISU student?</h4>
        </div>
        <div class="row">
            <div class="input-field col s4 push-s4">     
                <%= f.select(:on_campus?, %w[True False])%>        
            </div>
        </div>
    </div>
    <div class ='row' style='padding-top: 20px;'>
        <div class="input-field col s4 push-s4">
            <%= f.submit 'Save Request', :class => 'waves-effect waves-light btn-large center col s12' %> 
        </div>
    </div>                         
    <% end %>
</div>
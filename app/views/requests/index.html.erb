
<div class="row">
  <h1 class="center-align"><%="#{@month} #{@year}"%> Requests</h1>
  <br>
  <form class="col s12" action='/requests' method='GET'>
    <div class="row">
      <div class="col s2">
        <select>
          <option value="" disabled selected>View previous log</option>
          <% @logs.each do |log| %>
            <option value=<%=log.id%>><%="#{Date::MONTHNAMES[log.month.to_i]} #{log.year}"%></option>
          <% end %>  
        </select>
        <label>Materialize Select</label>
      </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit" name="action" value='coolguy'>Filter!
      <i class="material-icons right">send</i>
    </button>
  </form>
  <table class="striped centered">
    <thead>
      <tr>
        <th>Artist</th>
        <th>Song</th>
        <th>Genre</th>
        <th>Request Source</th>
        <th>In Library?</th>
        <th>Requested On</th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each do |request| %>
        <tr>
          <td> <%= (Artist.find_by id: request.artist_id).name %> </td>
          <td> <%= (Song.find_by id: request.song_id).title %> </td>
          <td> <%= (Genre.find_by id: request.genre_id).title %> </td>
          <td> <%= (Source.find_by id: request.source_id).name %> </td>
          <td> <%= request.in_system? %> </td>
          <td> <%= request.created_at.ctime %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>